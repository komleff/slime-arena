{
  "name": "@slime-arena/server",
  "version": "0.3.3",
  "private": true,
  "main": "src/index.ts",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn src/index.ts",
    "dev:meta": "ts-node-dev -r tsconfig-paths/register --respawn src/meta/server.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:meta": "node dist/meta/server.js",
    "db:migrate": "ts-node src/db/migrate.ts",
    "test": "npm run build && node tests/determinism.test.js && node tests/orb-bite.test.js && node tests/arena-generation.test.js"
  },
  "dependencies": {
    "colyseus": "^0.15.0",
    "@colyseus/monitor": "^0.15.0",
    "express": "^4.18.0",
    "cors": "^2.8.5",
    "pg": "^8.11.0",
    "redis": "^4.6.0",
    "@slime-arena/shared": "*"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "ts-node-dev": "^2.0.0",
    "ts-node": "^10.9.0",
    "@types/express": "^4.17.0",
    "@types/cors": "^2.8.12",
    "@types/pg": "^8.10.0",
    "@types/node": "^20.0.0",
    "tsconfig-paths": "^4.2.0"
  }
}
