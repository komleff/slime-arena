# ===========================================
# Slime Arena — Environment Variables Example
# ===========================================
# Скопируйте этот файл в .env.local и заполните значения
# cp .env.example .env.local
#
# .env.local НЕ коммитится (в .gitignore)
# ===========================================

# -------------------------------------------
# Server Configuration
# -------------------------------------------
NODE_ENV=development
PORT=2567
HOST=0.0.0.0

# -------------------------------------------
# MetaServer Configuration
# -------------------------------------------
META_PORT=3000
META_HOST=0.0.0.0
META_SERVER_URL=http://localhost:3000

# -------------------------------------------
# Database
# -------------------------------------------
DATABASE_URL=postgresql://slime:slime_dev_password@localhost:5432/slime_arena
REDIS_URL=redis://localhost:6379

# -------------------------------------------
# JWT & Security
# -------------------------------------------
JWT_SECRET=your-jwt-secret-here-min-32-chars
MATCH_SERVER_TOKEN=your-match-server-token
JOIN_TOKEN_SECRET=your-join-token-secret
JOIN_TOKEN_REQUIRED=false
JOIN_TOKEN_EXPIRES=300
SESSION_DURATION_DAYS=30
CLAIM_TOKEN_TTL_MINUTES=30

# Trust X-Forwarded-For (только за reverse proxy!)
TRUST_PROXY=false

# -------------------------------------------
# OAuth — Google
# -------------------------------------------
# https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/v1/auth/oauth/callback

# OAuth feature flags
OAUTH_GOOGLE_ENABLED=true
OAUTH_GOOGLE_ENABLED_RU=false

# -------------------------------------------
# OAuth — Yandex
# -------------------------------------------
# https://oauth.yandex.ru/client/new
YANDEX_CLIENT_ID=your-yandex-client-id
YANDEX_CLIENT_SECRET=your-yandex-client-secret
YANDEX_APP_ID=your-yandex-app-id

# OAuth feature flag
OAUTH_YANDEX_ENABLED=true

# -------------------------------------------
# OAuth — VK (опционально)
# -------------------------------------------
# https://vk.com/apps?act=manage
VK_CLIENT_ID=your-vk-client-id
VK_CLIENT_SECRET=your-vk-client-secret
OAUTH_VK_ENABLED=false

# -------------------------------------------
# Telegram
# -------------------------------------------
# @BotFather
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# -------------------------------------------
# Payments — Yandex.Kassa (опционально)
# -------------------------------------------
YANDEX_SHOP_ID=your-shop-id
YANDEX_SECRET_KEY=your-secret-key
APP_URL=https://slime-arena.com

# -------------------------------------------
# GeoIP Service
# -------------------------------------------
GEOIP_API_URL=http://ip-api.com/json
GEOIP_TIMEOUT_MS=3000
OAUTH_REGION_DETECTION_STRICT=true

# -------------------------------------------
# Monitoring
# -------------------------------------------
COLYSEUS_MONITOR=false
TELEMETRY_DISABLED=0
ANALYTICS_BATCH_SIZE=100

# -------------------------------------------
# Admin
# -------------------------------------------
ADMIN_USER_IDS=user-id-1,user-id-2

# -------------------------------------------
# Client (Vite)
# -------------------------------------------
# Для клиента используйте префикс VITE_
VITE_META_SERVER_URL=http://localhost:3000/api/v1
