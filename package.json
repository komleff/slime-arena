{
  "name": "slime-arena",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "scripts": {
    "dev:server": "npm run dev --workspace=server",
    "dev:client": "npm run dev --workspace=client",
    "start:servers": "concurrently --kill-others-on-fail --prefix \"[{name}]\" --names \"server,client\" \"npm run dev:server\" \"npm run dev:client\"",
    "stop:servers": "node -e \"const { exec } = require('child_process'); exec(process.platform === 'win32' ? 'scripts\\\\stop-servers.bat' : 'scripts/stop-servers.sh')\"",
    "build": "npm run build --workspace=shared && npm run build --workspace=server && npm run build --workspace=client",
    "test": "npm --workspaces --if-present test"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "pngjs": "^7.0.0",
    "tsconfig-paths": "^4.2.0"
  }
}
